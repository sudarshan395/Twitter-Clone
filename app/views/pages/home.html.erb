<div class="row">
	<div class="col-md-3">

	  <div class="card">
	  	
        	<div class="panel-image hide-panel-body">
        		<img src="/cover.jpg" class="panel-image-preview">
        	</div>
      
    
        	<div class="panel-footer">
            <div class="row">
                <div class="col-sm-2"><img src="/profile.png" height="50px" width="50px" class="rounded-img home-avatar"></div>
                <div class="col-sm-10"><h4 style="text-align: center;"><%= current_user.username %></h4></div>
                <div class="col-sm-12" style="margin-top: 10px;">
                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">POSTS<br>
                    <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.posts.count %></h6>
                  </div>
                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">FOLLOWERS<br>
                    <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.followers.count %></h6>
                  </div>
        			</div>

            
            </div>

        	</div>
            
        </div>
      
<div class="card">
<div class="card-body">
	<h5 style="color: grey; font-size: 125%;">Trends</h5>
	<a href="">#Trend #1</a><br>
	<span style="color: grey;">31K Posts</span><br>
	<a href="">#Trend #2</a><br>
	<span style="color: grey;">25K Posts</span><br>
	<a href="">#Trend #3</a><br>
	<span style="color: grey;">6K Posts</span><br>
</div>
</div>
</div>
	<div class="col-md-6">
		<%= render '/components/post_form' %><br><br>

		<% for @p in @posts %>
		<div class="card post-panel">
        <div class="card-body row">
        	<div class="col-sm-1">
        	<img src="/profile.png" class="rounded-img" height="50px" width="50px"></img>
        	</div>
        	<div class="col-sm-11">
        	<p class="post-title"><span class="post-owner"><%= User.find(@p.user_id).username %></span> <span class="post-creation"> - <%= @p.created_at.to_formatted_s(:short) %></span></p>
            <p class="post-content"><%= @p.content %></p>
        	</div>
        	<div class="col-sm-12">
        	<p class="post-links">
        		<i class="fa fa-comments g-links" aria-hidden="true"></i>
        		<i class="fa fa-retweet g-links" aria-hidden="true"></i>
        	    <i class="fa fa-heart g-links" aria-hidden="true"></i>
        	    <i class="fa fa-ellipsis-h g-links" aria-hidden="true"></i>
        	    <a href="" style="font-size: 12px;">View Conversation</a>
        	</p>
        	</div>
	    </div>
        </div>
<% end %>
<div class="card post-panel">
        <div class="card-body row">
        <div class="col-sm-12">
        	<center>
        		<a href="#top"><p style="opacity: .8; color: grey;">Back to Top <i class="fa fa-arrow-up" aria-hidden="true"></i></p></a>
        	</center>
        </div>
	    </div>
        </div>
	</div>
	<div class="col-md-3">
		<div class="card">
        <div class="card-body">
		<p style="opacity: 0.5; font-size: 90%">@2020 Twitter About Help Blog Status Jobs Terms Privacy Cookies Ads Info Brand Advertise Businesses Media Developers</p>
	</div>
</div>
	</div>
</div>





